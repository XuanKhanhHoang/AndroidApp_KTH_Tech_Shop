<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.KTHTechShop" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.KTHTechShop" parent="Base.Theme.KTHTechShop" />

    <style name="MyShapeAppearance">
        <item name="android:padding">0dp</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.Material3.Button">
        <item name="shapeAppearance">@style/MyShapeAppearance</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">@color/light_grey</item>
        <item name="android:textColorHint">#000</item>
    </style>

    <style name="MRadioButton.Purple" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorAccent">@color/main</item>
        <item name="colorControlHighlight">@color/main</item>
        <item name="android:colorPressedHighlight">@color/main</item>
        <item name="colorPrimaryDark">@color/main</item>
        <item name="colorPrimary">@color/main</item>
        <item name="colorControlActivated">@color/main</item>
    </style>

    <style name="Theme.KTHTechShop.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.KTHTechShop.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.KTHTechShop.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>