                        android:paddingHorizontal="15dp"
                        android:background="#E4E4E4"
                        android:textSize="13sp"
                        android:layout_marginVertical="3dp"
                        android:paddingVertical="1dp"
                        android:textColor="#707070"
                        android:fontFamily="sans-serif-light" />

                    <LinearLayout
