                            android:paddingVertical="2dp"
                            android:paddingStart="4dp"
                            android:text=""
                            android:textSize="18sp"
                            android:textColor="#FF5722"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="2dp"
