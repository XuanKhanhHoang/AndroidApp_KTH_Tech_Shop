<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rectangle_outline"
    android:orientation="horizontal"
    android:padding="5dp"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/CreateOrderProductItemLayout_ProductImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:padding="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/CreateOrderProductItemLayout_ProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:text="Samsung s23 ultra  "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/CreateOrderProductItemLayout_ProductOptionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:background="#E4E4E4"
            android:textSize="13sp"
            android:layout_marginVertical="3dp"
            android:paddingVertical="1dp"
            android:textColor="#707070"
            android:fontFamily="sans-serif-light"
            android:text="Blue , 128 GB" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/CreateOrderProductItemLayout_SellingPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="2dp"
                android:paddingStart="4dp"
                android:text="12.000.000 đ"
                android:textSize="18sp"
                android:textColor="#FF5722"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/CreateOrderProductItemLayout_OriginalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="2dp"
                android:layout_marginStart="15dp"
                android:paddingStart="4dp"
                android:text="12.000.000 đ"
                android:textColor="@color/light_grey"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="2dp"
                android:paddingStart="4dp"
                android:text="Số lượng"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/CreateOrderProductItemLayout_Amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="2dp"
                android:layout_marginStart="15dp"
                android:paddingStart="4dp"
                android:text="1"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>