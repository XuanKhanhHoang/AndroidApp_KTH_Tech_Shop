<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ProductDetail_CommentItemLayout_UserAvatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:strokeColor="@color/main"
        app:srcCompat="@drawable/icon_user"
        android:background="@color/light_grey"
        app:contentPadding="10dp"
        app:strokeWidth="0dp"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/ProductDetail_CommentItemLayout_UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khanh PoPo "
            android:paddingVertical="3dp"
            android:fontFamily="sans-serif-black" />

        <TextView
            android:id="@+id/ProductDetail_CommentItemLayout_UserCommentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21:36 23/08/1023"
            android:paddingVertical="3dp"
            android:textColor="@color/light_grey"
            android:textStyle="italic" />

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            style="@style/Widget.MaterialRatingBar.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="6dp"
            android:isIndicator="false"
            android:progressTint="@color/light_bold_yellow"
            android:rating="3.4"
            android:secondaryProgressTint="@color/light_bold_yellow"
            app:mrb_progressBackgroundTint="@color/light_bold_yellow" />

        <TextView
            android:id="@+id/ProductDetail_CommentItemLayout_UserComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dạ Hoàng Hà Mobile xin chào anh/chị,
Hiện sản phẩm này bên em đang còn tại chi nhánh:
419 Nguyễn Ảnh Thủ (đối diện chợ Trung Chánh), Quận 12, TP.HCM
0902.840.419"
            android:paddingVertical="3dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ProductDetail_CommentItemLayout_Image_RclView"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:padding="10dp"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/ProductDetail_CommentItemLayout_ImageIsZoom"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:src="@drawable/s23_xang" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phản hồi từ nhà bán hàng"
            android:paddingVertical="3dp"
            android:paddingHorizontal="10dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-black"
            android:background="@color/light_grey" />

        <TextView
            android:id="@+id/ProductDetail_CommentItemLayout_SellerReplyTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21:36 23/08/1023"
            android:paddingVertical="3dp"
            android:paddingHorizontal="20dp"
            android:textColor="@color/light_grey"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/ProductDetail_CommentItemLayout_SellerReplyContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dạ Hoàng Hà Mobile xin chào anh/chị,
Hiện sản phẩm này bên em đang còn tại chi nhánh:
419 Nguyễn Ảnh Thủ (đối diện chợ Trung Chánh), Quận 12, TP.HCM
0902.840.419"
            android:paddingHorizontal="20dp"

            android:paddingVertical="3dp" />

    </LinearLayout>
</LinearLayout>