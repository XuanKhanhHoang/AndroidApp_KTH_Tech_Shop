<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:nestedScrollingEnabled="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:nestedScrollingEnabled="false"

        tools:context=".activity.UserActivity">

        <ImageButton
            android:id="@+id/Global_BackBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#ffff"
            android:contentDescription="@string/back_text"
            android:src="@drawable/ic_arrow_left_solid" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/main"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="5dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/UserActivity_UserAvatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                android:src="@drawable/ic_user_solid"
                android:layout_gravity="center"
                android:background="@color/white"
                app:contentPadding="15dp"
                app:strokeWidth="0dp" />

            <TextView
                android:id="@+id/UserActivity_UserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KhanhPopo"
                android:paddingVertical="2dp"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingVertical="5dp"
                android:textColor="@color/main"
                android:text="Thông tin người dùng :" />

            <TextView
                android:id="@+id/UserActivity_ToEdit"
                android:layout_gravity="end|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="5dp"
                android:drawableEnd="@drawable/ic_pencil_solid_16dp"
                android:drawablePadding="4dp"
                android:textColor="@color/main"
                android:text="Chỉnh sửa" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Họ"
                    android:layout_marginRight="20dp" />

                <TextView
                    android:id="@+id/UserActivity_Last_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hoàng" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Tên"
                    android:layout_marginRight="20dp" />

                <TextView
                    android:id="@+id/UserActivity_FirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xuân Khanh" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Giới tính"
                android:layout_marginRight="20dp" />

            <TextView
                android:id="@+id/UserActivity_Gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Email"
                android:layout_marginRight="20dp" />

            <TextView
                android:id="@+id/UserActivity_Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khanhpopo056@gmail.com" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Số điện thoại"
                android:layout_marginRight="20dp" />

            <TextView
                android:id="@+id/UserActivity_PhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0123456789" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Địa chỉ"
                android:layout_marginRight="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/UserActivity_Address"
                android:text="abc , xyz, madshkdskahjg,dahhdakdhss" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingVertical="10dp"
            android:textColor="@color/main"
            android:text="Đơn hàng đang giao :" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/UserActivity_DeliveringOrders_RclView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingVertical="10dp"
            android:textColor="@color/main"
            android:text="Lịch sử đơn hàng : " />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/UserActivity_AllOrders_RclView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"

            />

    </LinearLayout>
</ScrollView>